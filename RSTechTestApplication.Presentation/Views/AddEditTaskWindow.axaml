<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="using:RSTechTestApplication.Presentation.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="180"
        MinWidth="300"
        MinHeight="120"
        WindowStartupLocation="CenterOwner"
        Width="300"
        Height="120"
        x:DataType="viewmodels:TaskItemViewModel"
        x:Class="RSTechTestApplication.Presentation.Views.AddEditTaskWindow"
        Title="Add new task">
    <Window.Styles>
        <Style Selector="DataValidationErrors">
          <Setter Property="Template">
            <ControlTemplate>
              <DockPanel LastChildFill="True">
                <ContentPresenter Name="PART_ContentPresenter"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="Red"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="{TemplateBinding CornerRadius}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  Padding="{TemplateBinding Padding}"/>
              </DockPanel>
            </ControlTemplate>
          </Setter>
        </Style> 
    </Window.Styles>
    <Design.DataContext>
		<viewmodels:TaskItemViewModel/>
	</Design.DataContext>
	
	<Window.KeyBindings>
		<KeyBinding Gesture="Escape" Command="{Binding CloseCommand, Mode=OneWay}" />
    </Window.KeyBindings>

    <Grid Margin="10" >
		<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Grid.Row="0" 
                 Grid.Column="0"
                 x:Name="TitleTextBox"
                 Watermark="Title"
                 Text="{Binding Title}"
                 Grid.ColumnSpan="2"
                 Margin="0,10,0,2"/>

        <ItemsControl Grid.Row="1" 
                      Grid.Column="0"
                      Height="20" 
                      Margin="5,0,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding (DataValidationErrors.Errors), ElementName=TitleTextBox}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Foreground="Red" FontSize="12"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Grid.Row="1" 
                Grid.Column="1" 
                Content="Add task" 
                HorizontalAlignment="Right" 
                Width="100" 
                Height="40" 
                Command="{Binding AddTaskCommand}"
                VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center">
        </Button>
    </Grid>
</Window>
